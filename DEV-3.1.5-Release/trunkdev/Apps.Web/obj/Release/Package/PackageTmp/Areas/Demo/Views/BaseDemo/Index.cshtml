                }

                function SetSelResult(result, resultName, key, val) {
                    $("#" + key).val(result);
                    $("#" + val).val(resultName);
                }
                function GetSelResult(key, val) {
                    var arrayObj = new Array()
                    arrayObj[0] = $("#" + key).val();
                    arrayObj[1] = $("#" + val).val();
                    return arrayObj;
                }
                //ifram 返回
                function frameReturnByClose() {
                    $("#modalwindow").window('close');
                }
                        </script>
                    </td>
                </tr>
                <tr>
